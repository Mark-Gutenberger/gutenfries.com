{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"version": "1.0.0",
	"apiVersion": "v1",
	"tasks": {
		"start": "deno run -Ar --unstable main.ts",
		"dev": "deno run -A --unstable --watch=components/,routes/,islands/,layouts/ dev.ts --no-clear-screen",
		"test": "deno test --allow-all --no-check --unstable --doc --allow-none && cargo test",
		"lint": "deno lint && cargo clippy --all-targets --all-features -- -D warnings",
		"fmt": "deno fmt && cargo fmt --all --verbose",
		"build": "deno task wasmbuild-build-color_generator && deno task wasmbuild-build-search && deno task fmt",
		"build-resume": "deno run -A --unstable ./scripts/build-resume.ts",
		"build-css": "deno run -A --unstable ./scripts/build-css.ts",
		"wasmbuild-build-color_generator": "deno run -A https://deno.land/x/wasmbuild@0.9.0/main.ts --all-features --out ./wasm -p color_generator",
		"wasmbuild-build-search": "deno run -A https://deno.land/x/wasmbuild@0.9.0/main.ts --all-features --out ./wasm -p search",
		"clean": "cargo clean && sh -c 'rm -rf ./wasm/*.{wasm,js}'"
	},
	"importMap": "import_map.json",
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		},
		"files": {
			"exclude": ["wasm/", "target/", "static/"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 4,
			"proseWrap": "preserve",
			"singleQuote": true
		},
		"files": {
			"exclude": ["static/", "target/"]
		}
	},
	"test": {
		"files": {
			"exclude": ["target/", "wasm/"]
		}
	}
}
