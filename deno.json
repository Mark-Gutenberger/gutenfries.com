{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"version": "0.1.0",
	"apiVersion": "v1",
	"tasks": {
		"dev": "deno run -A --unstable --watch=static/,routes/ dev.ts --no-clear-screen",
		"production": "deno task build; deno task start",
		"start": "deno run -A --unstable main.ts",
		"build": "cargo build --target wasm32-unknown-unknown --release; mkdir -p wasm; wasm-bindgen ./target/wasm32-unknown-unknown/release/rust.wasm --out-dir ./wasm/ --out-name wasm --target deno --typescript; deno fmt",
		"clean": "cargo clean && rm -rf ./wasm",
		"test": "deno test --allow-all --no-check --unstable --doc --allow-none; cargo test",
		"docker-build": "docker build --build-arg GIT_REVISION=$(git rev-parse HEAD) -t gutenfries.com .",
		"docker-run": "docker run --rm -it -p 80:80 gutenfries.com:latest",
		"docker-tag": "docker tag gutenfries.com gutenfries.azurecr.io/gutenfries.com:$(deno run -A ./utils/version.ts)",
		"docker-push": "echo 'you have to do this by hand'"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"importMap": "import_map.json",
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		},
		"files": {
			"exclude": ["static/", "target/", "bindings/"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 4,
			"proseWrap": "preserve",
			"singleQuote": true
		},
		"files": {
			"exclude": ["static/", "target/"]
		}
	}
}
