{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"version": "0.1.0",
	"apiVersion": "v1",
	"tasks": {
		"start": "deno run -A --unstable main.ts",
		"dev": "deno run -A --unstable --watch=components/,routes/,islands/,wasm/,layouts/ dev.ts --no-clear-screen",
		"test": "deno test --allow-all --no-check --unstable --doc --allow-none && cargo test",
		"lint": "deno lint && cargo clippy --all-targets --all-features -- -D warnings",
		"fmt": "deno fmt && cargo fmt --all --verbose",
		"build": "deno task wasmbuild-build-background_generator && deno task wasmbuild-build-search && deno fmt",
		"build-resume": "deno run -A --unstable ./scripts/build-resume.ts",
		"wasmbuild-build-background_generator": "deno run -A https://deno.land/x/wasmbuild@0.9.0/main.ts --all-features --out ./wasm -p background_generator",
		"wasmbuild-build-search": "deno run -A https://deno.land/x/wasmbuild@0.9.0/main.ts --all-features --out ./wasm -p search",
		"clean": "cargo clean && rm -rf ./wasm"
	},
	"importMap": "import_map.json",
	"lint": {
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"ban-untagged-todo"
			],
			"exclude": [
				"no-unused-vars"
			]
		},
		"files": {
			"exclude": [
				"static/",
				"target/",
				"wasm/"
			]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 4,
			"proseWrap": "preserve",
			"singleQuote": true
		},
		"files": {
			"exclude": [
				"static/",
				"target/"
			]
		}
	},
	"test": {
		"files": {
			"exclude": [
				"static/",
				"target/",
				"wasm/"
			]
		}
	}
}
