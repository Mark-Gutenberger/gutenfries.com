{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"version": "0.0.6",
	"apiVersion": "v1",
	"tasks": {
		"dev": "deno run -A --unstable --watch=static/,routes/ dev.ts --no-clear-screen",
		"production": "deno task build; deno run -A --unstable main.ts",
		"start": "deno run -A --unstable main.ts",
		"build": "deno_bindgen",
		"clean": "cargo clean",
		"docker-build": "Docker build -t gutenfries.com .",
		"docker-run": "docker run --rm -it -p 80:80 gutenfries.com:latest",
		"docker-tag": "docker tag gutenfries.com gutenfries.azurecr.io/gutenfries.com:$(deno run -A ./utils/version.ts)",
		"docker-push": "echo 'you have to do this by hand'"
	},
	"compilerOptions": {
		"allowJs": true,
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"importMap": "./import_map.json",
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		},
		"files": {
			"exclude": ["static/", "target/", "wasm/"]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 4,
			"proseWrap": "preserve",
			"singleQuote": true
		},
		"files": {
			"exclude": ["static/", "target/"]
		}
	}
}
