{
	"deno.enable": true,
	"deno.lint": true,
	"[typescriptreact]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"[typescript]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"[javascript]": {
		"editor.defaultFormatter": "denoland.vscode-deno"
	},
	"css.customData": [
		".vscode/tailwind.json"
	],
	"editor.quickSuggestions": {
		"strings": true
	},
	"tailwindCSS.includeLanguages": {
		"javascript": "javascript",
		"html": "HTML"
	},
	"tailwindSorter.categoryOrder": {
		"sortOrder": [
			"color",
			"box",
			"flex",
			"grid",
			"bg-visual",
			"margins",
			"borders",
			"sizing",
			"typography",
			"transformations",
			"other"
		]
	}
}